-- http://projects.haskell.org/xmobar/
-- I use Font Awesome 5 fonts in this config for unicode "icons".  On Arch Linux,
-- install this package from the AUR to get these fonts: otf-font-awesome-5-free

Config { font    = "xft:Mononoki Nerd Font:weight=bold:pixelsize=18:antialias=true:hinting=true"
       , additionalFonts = [ "xft:Mononoki Nerd Font:pixelsize=11:antialias=true:hinting=true"
                           , "xft:Font Awesome 5 Free Solid:pixelsize=16"
                           , "xft:Font Awesome 5 Brands:pixelsize=16"
                           ]
       , bgColor = "#282c34"
       , fgColor = "#ff6c6b"
       , position = Bottom
       , lowerOnStart = True
       , hideOnStart = False
       , allDesktops = True
       , persistent = True
       , iconRoot = "/etc/nixos/modules/xmonad/xmonad-icons/"  -- default: "."
       , commands = [
                    -- Time and date
                      Run Date "<fn=2>\xf017</fn>  %b %d %Y - (%H:%M) " "date" 50
                      -- Network up and down
                    , Run Network "eth0" ["-t", "<fn=2>\xf0ab</fn>  <rx>kb  <fn=2>\xf0aa</fn>  <tx>kb"] 20
                      -- Cpu usage in percent
                    , Run Cpu ["-t", "<fn=2>\xf108</fn>  cpu: (<total>%)","-H","50","--high","red"] 20
                      -- Ram used number and percent
                    , Run Memory ["-t", "<fn=2>\xf233</fn>  mem: <used>M (<usedratio>%)"] 20
                      -- Disk space free
                    , Run Com "/etc/nixos/modules/xmonad/plume/xmobar/diskusage.sh" [] "disk" 60
                    , Run UnsafeStdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = " <icon=haskell_20.xpm/><fc=#666666> | </fc> %UnsafeStdinReader% }{<fc=#666666>|</fc><fc=#ecbe7b> <action=`terminator -e htop`> %cpu%</action> </fc> <fc=#666666>|</fc><fc=#ff6c6b> <action=`terminator -e htop`> %memory%</action> </fc> <fc=#666666>|</fc><fc=#51afef> %disk%</fc> <fc=#666666>|</fc><fc=#98be65> <action=`terminator -e sudo iftop`> %eth0%</action> </fc> <fc=#666666>|</fc><fc=#46d9ff> %date%           </fc>"
       }
